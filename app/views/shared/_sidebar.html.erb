<fieldset class="notes">
	<div class="notes">
		<h4>Search Jobs</h4>
<p class="last">For most searches a simple <strong>zip code</strong> will suffice,
but you can be as specific as you want.  To see all jobs in a particular state, just enter that state. </p>
</div>
</fieldset>


<% form_tag( {:controller=>'search', :action=>'index'}, {:method => :get} ) do %>
  <fieldset class="inner">
	<legend>Address</legend>
	<span class="small">
  <%= label_tag 'City:' %><br> <%= text_field_tag :city, params[:city], :size=>15 %><br><br>
  <%= label_tag 'State:' %><br>  <%= text_field_tag :state, params[:state], :size=>2 %><br><br>
  <%= label_tag 'Zip:' %><br>  <%= text_field_tag :zip, params[:zip], :size=>7 %><br><br>
  
  <%= label_tag 'Distance:' %></td><br>
  <%= select_tag "within", options_for_select(%w{5 10 15 25 40},"10") %><br>Miles<br><br>
  </span>
  </fieldset>
  
  
  
    <fieldset class="optional">
  <legend>Optional</legend>
<span class="small">
  <%= label_tag 'Telecommute Jobs:' %>
  <%= select_tag 'telecommute', options_for_select(%w{include exclude only}, "include") %>
  </span>
  </fieldset><hr>
  <%= submit_tag "Search" %>
<% end %>
