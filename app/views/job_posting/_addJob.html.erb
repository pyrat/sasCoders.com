

<% form_for :jobPosting, :url => {:action=>:create} do |form| %>
  <p><strong>Title:</strong><br> <%= form.text_field :title, :size=>30 %></p>
  <p><strong>Your Company Name:</strong><br> <%= @user.company %> </p>
  <p><strong>Your Company Type:</strong><br> <%= @user.company_type %> </p>
  <p><strong>Short Description:</strong><br> <%= form.text_area :short_description, :rows=>5 %> </p>
  <p><strong>Experience Required:</strong><br> <%= form.text_area :experience, :rows=>15 %> </p>
  <p><strong>Long Description:</strong><br> <%= form.text_area :long_description, :rows=>15 %> </p>
  <p><strong>Telecommute?</strong> <%= form.check_box :telecommute %></p>
  <p><strong>Zip:</strong><br> <%= form.text_field :zip, :size=> 6 %> </p>
  <p><strong>Job Type:</strong><br> <%= form.text_field :job_type, :size=>30 %> </p>
  <p><strong>Pay:</strong><br> <%= form.text_field :pay, :size=>7 %> </p>
  <p><strong>Additional Instructions:</strong><br> <%= form.text_area :addl_instructions, :rows=>6 %> </p>
  <hr>
  <p><strong>Start Date For Ad:</strong> <%= form.text_field :start_run_date, :size=>9 %> Leave blank if you want it to start
  as soon as it's approved and credits are applied.</p>
  
  <p><%= submit_tag %></p>
  
<% end %>